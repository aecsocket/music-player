<resources xmlns:tools="http://schemas.android.com/tools">
    <color name="live">#e53935</color>
    <color name="onLive">#ffffff</color>
    <color name="selector">#96717171</color>

    <style name="Base.Parent" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">#ff9800</item>
        <item name="colorPrimaryVariant">?attr/colorPrimary</item>
        <item name="colorOnPrimary">#000000</item>

        <item name="colorSecondary">?attr/colorPrimary</item>
        <item name="colorSecondaryVariant">?attr/colorPrimaryVariant</item>
        <item name="colorOnSecondary">?attr/colorOnPrimary</item>

        <item name="colorError">#f44336</item>
        <item name="colorOnError">#ffffff</item>

        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <item name="android:navigationBarColor">?attr/colorSurface</item>
    </style>

    <style name="Base.Light" parent="Base.Parent">
        <item name="colorSurface">#ffffff</item>
        <item name="colorOnSurface">#000000</item>

        <item name="android:colorBackground">#fafafa</item>
        <item name="colorOnBackground">#212121</item>

        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="O_MR1">true</item>
    </style>

    <style name="Base.Dark" parent="Base.Parent">
        <item name="colorSurface">#121212</item>
        <item name="colorOnSurface">#ffffff</item>

        <item name="android:colorBackground">#000000</item>
        <item name="colorOnBackground">#ffffff</item>
    </style>

    <style name="Base" parent="Base.Light" />

    <style name="Base.Icon" parent="Base">
        <item name="android:tint">?attr/colorOnSurface</item>
    </style>

    <style name="Base.Backing" parent="Base">
        <item name="android:background">?attr/colorSurface</item>
    </style>

    <style name="Base.TextView.Primary" parent="Base">
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="Base.Live" parent="Base">
        <item name="android:background">@color/live</item>
        <item name="colorOnSurface">@color/onLive</item>
    </style>
</resources>