<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.HiMom" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/accent</item>
        <item name="background">@color/bg</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/bg_alt</item>
        <item name="android:textColor">@color/fg</item>
        <item name="android:textColorHint">@color/hint</item>
        <item name="android:textSize">@dimen/text_size</item>
    </style>

    <style name="Base.Theme.HiMom" parent="Theme.HiMom">
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="O_MR1">true</item>
    </style>
</resources>