<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/bg">

    <TextView
        android:id="@+id/errorHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="24dp"
        android:text="@string/error_header"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/errorMessageDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/error_message"
        app:layout_constraintStart_toStartOf="@+id/errorHeader"
        app:layout_constraintTop_toBottomOf="@+id/errorHeader" />

    <TextView
        android:id="@+id/errorMessage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:minLines="3"
        app:layout_constraintEnd_toEndOf="@+id/errorHeader"
        app:layout_constraintStart_toStartOf="@+id/errorMessageDesc"
        app:layout_constraintTop_toBottomOf="@+id/errorMessageDesc" />

    <TextView
        android:id="@+id/errorStackTraceDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/error_stack_trace"
        app:layout_constraintStart_toStartOf="@+id/errorMessage"
        app:layout_constraintTop_toBottomOf="@+id/errorMessage" />

    <HorizontalScrollView
        android:id="@+id/errorStackTraceContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/errorMessage"
        app:layout_constraintStart_toStartOf="@+id/errorStackTraceDesc"
        app:layout_constraintTop_toBottomOf="@+id/errorStackTraceDesc">

        <TextView
            android:id="@+id/errorStackTrace"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textIsSelectable="true"
            android:typeface="monospace" />
    </HorizontalScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>